num=int(input("Enter any number:"))  #python
r=2
while r<=num//2 :      #false----enter in else
    if num%r==0: 
        print("its not prime number")
        break  
    r+=1 
else: # when enter in else ---> r==num//2+1
    print("Its prime number")

